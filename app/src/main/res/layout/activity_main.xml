<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/shadow_card"
                android:layout_margin="20dp">

            </LinearLayout>

            <com.beike.ctdialog.widget.EllipsisTextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:background="#FF191A2A"
                android:text=""
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_common_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通弹窗" />

            <Button
                android:id="@+id/bt_checkbox_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择弹窗" />

            <Button
                android:id="@+id/bt_input_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入框弹窗" />

            <Button
                android:id="@+id/bt_vertical_bt_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="垂直按钮框弹窗" />

            <Button
                android:id="@+id/bt_pick_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择弹窗" />

            <Button
                android:id="@+id/bt_share_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享弹窗" />

            <Button
                android:id="@+id/bt_loding_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载框" />

            <Button
                android:id="@+id/bt_page_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="页面loading" />

            <Button
                android:id="@+id/bt_progress_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进度条" />

            <Button
                android:id="@+id/popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pop"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/popup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="pop"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/popup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="0pop0"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
